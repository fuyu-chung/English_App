<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/layout_login_a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logintopbar"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mylogo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="20dp"
            android:src="@drawable/logo_circle01" />

    </LinearLayout>

    <TextView
        android:id="@+id/register_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_login_a"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="註冊頁面測試"
        android:textColor="@color/words_topic01"
        android:textSize="35sp"
        android:textStyle="bold" />

</RelativeLayout>